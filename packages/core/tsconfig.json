{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["es6", "dom", "esnext"],
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "rootDir": "src",
    "outDir": "build"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/node_modules/**"]
}
